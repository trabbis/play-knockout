{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Play (debug)",
      "type": "shell",
      "command": "sbt -jvm-debug 9999 run",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": { "regexp": "^$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Listening for HTTP|Started server|play.core.server.DevServerStart"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
